<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD6D6"
    tools:context=".Fragments.HomeFragment">

    <!-- Anasayfa Metni -->

    <!-- Menü Alanı -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/arka_plan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/pagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemek Tarifim"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTarifAra"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_background"
            android:hint="Tarif Ara..."
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnTarifAra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F86060"
            android:text="Ara" />
    </LinearLayout>

    <!-- Günün Menüsü -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Günün Menüsü"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:onClick="menuDetailPage"
                android:clickable="true"
                android:padding="8dp"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="300dp"
                android:layout_height="270dp"
                android:id="@+id/imageHome"
                android:src="@drawable/baseline_food_bank_24"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:clipToOutline="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yemeğin Adı"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- Yemeğin Adı -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="16dp">


    </androidx.cardview.widget.CardView>

    <!-- Arama Görünümü -->
</FrameLayout>
