<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".HomeFragment">

    <!-- Anasayfa Metni -->

    <!-- Menü Alanı -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/arka_plan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/pagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemek Tarifim"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintTop_toTopOf="@+id/background" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:padding="16dp">

        <EditText
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="Tarif Ara..." />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F86060"
            android:text="Ara" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="300dp">

        <!-- Günün Menüsü -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_food_bank_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Günün Menüsü"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:onClick="menuDetailPage"
                android:clickable="true"
                android:padding="8dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Yemeğin Adı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemeğin Adı"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Arama Görünümü -->
</FrameLayout>
